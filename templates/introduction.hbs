<div class="introduce-me introduction">
    <div class="introduction-container {{#if this.editing}}editing{{/if}}" style="background-color: {{this.colors.background}};">
        {{#if this.editing}}<button class="close-button"><i class="fas fa-times"></i></button>{{/if}}
        <div class="actor-container">
            {{#if this.colors.clip}}
                <img class="clip right top" src="modules/introduce-me/assets/CornerClip.png"></img>
                <img class="clip right bottom" src="modules/introduce-me/assets/CornerClip.png"></img>
                <img class="clip left top" src="modules/introduce-me/assets/CornerClip.png"></img>
                <img class="clip left bottom" src="modules/introduce-me/assets/CornerClip.png"></img>
            {{/if}}
            <img id="actorImage" src="{{this.img}}" class="actor-image {{#if this.editing}}visible{{/if}}"></img>
        </div>
        <div class="text-container" style="overflow: hidden;">
            <label class="{{#if this.editing}}visible{{/if}}" id="name" style="color: {{this.colors.text}};">{{this.token.name}}</label>
            <label class="{{#if this.editing}}visible{{/if}}" id="citation" style="color: {{this.colors.text}};">{{this.flavor}}</label>
        </div>
    </div>
</div>