<form class="introduce-me audio-settings">
    <content>
        <div class="flexrow audio-row picker-row">
            <div class="flex2 flexrow" style="justify-content: space-between; align-items: center;">
                <label class="flex0">{{localize "introduceMe.audioSettings.audio"}}</label>
                {{#if this.audio.src}}<i class="fas fa-ban flex0 remove-audio" title="{{localize "introduceMe.audioSettings.removeAudio"}}"></i>{{/if}}
            </div>
            <div class="flex3 flexrow"> 
                <input id="src" name="audio.sounds.0.src" value="{{this.audio.src}}" title="{{this.audio.src}}" type="text" disabled />
                <button id="play" class="flex0" title="{{localize "introduceMe.audioSettings.playAudio"}}" {{#unless this.audio.src}}disabled{{/unless}}>
                    <i {{#if this.playingSound}}class="fas fa-stop"{{else}}class="fas fa-play"{{/if}}></i>
                </button>
                {{filePicker type="audio" target="src"}}
            </div>
        </div>
        <div class="flexrow audio-row">
            <label class="flex2">{{localize "introduceMe.audioSettings.volume"}}</label>
            <div class="flex3 flexrow volume-row">
                {{rangePicker name="audio.sounds.0.volume" value=this.audio.volume min=0.1 max=1 step=0.1}}
            </div>
        </div>
        <div class="flexrow audio-row">
            <label class="flex2">{{localize "introduceMe.audioSettings.loop"}}</label>
            <span class="flex3 loop-row">
                <input id="loop" type="checkbox" name="audio.sounds.0.loop" data-dtype="Boolean" {{checked this.audio.loop}} />
            </span>
        </div>
    </content>
    <footer>
        <button id="save"><i class="fas fa-save"></i>Save</button>
    </footer>
</form>