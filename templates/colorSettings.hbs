<form class="introduce-me color-settings" autocomplete="off">
    <content>
        {{> "modules/introduce-me/templates/partials/colorSettingHeader.hbs"
            templates=this.templates    
        }}
        {{#each this.colors}}
            {{> "modules/introduce-me/templates/partials/colorSetting.hbs" 
                key=@key
                name=(concat "colors." @key)
                templates=../templates
                color=this
            }}
        {{/each}}
    </content>
    <footer>
        <button id="save"><i class="fas fa-save"></i>{{localize "introduceMe.colorSettings.save"}}</button>
    </footer>
</form>